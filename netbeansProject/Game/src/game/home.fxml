<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: #F0F0F0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <stylesheets>
        <URL value="@game.css" />
    </stylesheets>
   <children>
      <HBox fx:id="MenuBar" layoutX="-1.0" prefHeight="50.0" prefWidth="802.0" style="-fx-background-color: #333333; -fx-border-color: #333333;">
         <children>
            <Button fx:id="SettingsMenu" mnemonicParsing="false" onAction="#checkUser" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Settings">
               <HBox.margin>
                  <Insets left="480.0" top="5.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="ReportsMenu" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#openReports" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Reports">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="LogOut" layoutX="627.0" layoutY="15.0" mnemonicParsing="false" onAction="#Logout" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Logout">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <effect>
            <DropShadow radius="8.75" width="16.0" />
         </effect>
      </HBox>
      <TilePane fx:id="tilePane" hgap="30.0" layoutY="52.0" prefHeight="352.0" prefWidth="800.0" vgap="30.0">
         <children>
            <Button fx:id="MathsImage" mnemonicParsing="false" onAction="#openQuiz" prefHeight="143.0" prefWidth="149.0" styleClass="mathsImage" stylesheets="@game.css">
               <effect>
                  <DropShadow height="22.0" radius="10.5" width="22.0" />
               </effect>
            </Button>
            <Button fx:id="GeographyImage" mnemonicParsing="false" onAction="#openQuiz" prefHeight="143.0" prefWidth="149.0" styleClass="geoImage" stylesheets="@game.css">
               <effect>
                  <DropShadow height="22.0" radius="10.5" width="22.0" />
               </effect>
            </Button>
            <Button fx:id="ComputerImage" mnemonicParsing="false" onAction="#openQuiz" prefHeight="143.0" prefWidth="149.0" styleClass="computerImage" stylesheets="@game.css">
               <effect>
                  <DropShadow height="22.0" radius="10.5" width="22.0" />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="50.0" top="20.0" />
         </padding>
      </TilePane>
      <Button fx:id="AddCategory" layoutX="670.0" layoutY="404.0" mnemonicParsing="false" onAction="#addCategory" prefHeight="34.0" prefWidth="117.0" styleClass="add_btn" stylesheets="@game.css" text="Add Category" textFill="#333333">
         <font>
            <Font size="14.0" />
         </font>
         <effect>
            <DropShadow height="16.0" radius="7.5" width="16.0" />
         </effect>
      </Button>
   </children>
</AnchorPane>
