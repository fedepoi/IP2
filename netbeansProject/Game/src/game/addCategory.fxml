<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="800.0" style="-fx-background-color: #F0F0F0;" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controllers.AddCategoryController">
    <stylesheets>
        <URL value="@game.css" />
    </stylesheets>
   <children>
      <HBox fx:id="MenuBar" prefHeight="50.0" prefWidth="802.0" style="-fx-background-color: #333333; -fx-border-color: #333333;">
         <children>
            <Button fx:id="SettingsMenu" mnemonicParsing="false" onAction="#checkUser" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Settings">
               <HBox.margin>
                  <Insets left="480.0" top="5.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="ReportsMenu" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#openReports" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Reports">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="LogOut" layoutX="627.0" layoutY="15.0" mnemonicParsing="false" onAction="#Logout" prefHeight="35.0" prefWidth="107.0" styleClass="ReportsMenu" stylesheets="@game.css" text="Logout">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <effect>
            <DropShadow radius="8.75" width="16.0" />
         </effect>
      </HBox>
      <JFXTextField fx:id="addCategoryField" focusColor="#f78c7b" layoutX="412.0" layoutY="208.0" prefHeight="35.0" prefWidth="266.0" promptText="Add the new Category" unFocusColor="#f78c7b" />
      <Button fx:id="saveButton" layoutX="604.0" layoutY="403.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="117.0" styleClass="register_btn" stylesheets="@game.css" text="Save" textFill="#333333">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="AddCategory" layoutX="476.0" layoutY="403.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="117.0" styleClass="register_btn" stylesheets="@game.css" text="Add Category" textFill="#333333">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="imageAddCatButton" layoutX="121.0" layoutY="123.0" mnemonicParsing="false" prefHeight="219.0" prefWidth="254.0" styleClass="addCatImage">
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="goToHome" layoutX="610.0" layoutY="73.0" mnemonicParsing="false" onAction="#goToHome" styleClass="categoryButtons" stylesheets="@game.css" text="Go to Home Page" />
   </children>
</AnchorPane>
